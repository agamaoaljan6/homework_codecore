<%= render '/shared/errors', obj: @post%>

<div class="container column form-field">
<div class="form-group">
    <div class="col-sm-10">
        <%= form_for(@post, :html => {class:'form-horizontal', role: "form"}) do |f| %>
        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :title%>
            </div>
            <div class="col-sm-10">
                <%= f.text_field :title, class: "form-control", placeholder: "Post", autofocus: true %>
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-sm-2">
                <%= f.label :body%>
            </div>
            <div class="col-sm-10">
                <%= f.text_area :body,rows:10,class: "form-control", placeholder: "Description", autofocus: true %>
            </div>
        </div>
        
        <div class="form-group">
            <div class="create-button">
                <%= f.submit class: 'btn btn-primary btn-lg' %>
            </div>
        </div>

        <%end%>

    </div>
</div>
</div>
