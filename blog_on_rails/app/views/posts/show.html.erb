<h2 align="center"> <%= @post.title%></h2>
<div align="center">
    <p class="description mt-5 mb-2">Description:
            <%= simple_format(@post.body)%>
        </p>
        <p> Posted <%= time_ago_in_words(@post.created_at) %> ago </p>

    <div class="post-actions">
        <%= link_to  "Edit this post", edit_post_path(@post), class: "btn btn-xs btn-primary" %>
        <%= link_to 'Delete this post', post_path(@post), method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-xs btn-danger ml-2"%>
    </div>

</div>
<br>

<%= form_with(model: [@post, @comment], local: true) do |f| %>
<% if @comment.errors.any? %>
<ul>
  <% @comment.errors.full_messages.each do |msg|%>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<div class="form-group">
  <div class="col-sm-6">
      <p class="comment-comment"><%= f.label :COMMENT%></p>
      <%= f.text_area :title,rows:5, class: "form-control", placeholder: "Drop a comment", autofocus: true %>

  </div>



<div class="col-sm-offset-4 mt-3 ml-3 mb-5">
  <%= f.submit class: 'btn btn-primary create-btn' %>
</div>
<% end %>

  <div class="row" align="center">
    <% @comments.each do |comment| %>
      <div class="col-sm-4">
          <div class="post-comment">
            <%= comment.body %>
          </div>

          <div class="col-sm-4">
            <%= link_to("Delete",post_comment_path(@post, comment),method: :delete,data: {confirm: "Are you sure?"})%>
          </div>
          <p class="post-answer"> Commented <%= time_ago_in_words(comment.created_at) %> ago </p>
        </div>
  <% end %>
